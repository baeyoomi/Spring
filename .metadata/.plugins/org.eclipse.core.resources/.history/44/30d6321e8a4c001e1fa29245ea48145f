package sp1;

import java.util.ArrayList;
import java.util.LinkedList;

//2차원 배열에 대한 응용편
/*
	A조 김경민,배유미,김승균
	B조 이철의,장진호,홍사라
	C조 박병준,전정호,이경선
	D조 최현제,서강인,염무원
	
	[결과]
	[[A조,김경민,배유미,김승균],[B조,이철의,장진호,홍사라]....]
*/
public class array_link3 {

	public static void main(String[] args) {
		//코드 및 결과 출력
		String group[][] = {
				{"A조","김경민","배유미","김승균"},
				{"B조","이철의","장진호","홍사라"},
				{"C조","박병준","전정호","이경선"},
				{"D조","최현제","서강인","염무원"}
		}; 

		ArrayList<ArrayList<String>> team = new ArrayList<ArrayList<String>>();
		/*
		ArrayList<String> cr1 = new ArrayList<String>();
		ArrayList<String> cr2 = new ArrayList<String>();
		ArrayList<String> cr3 = new ArrayList<String>();
		ArrayList<String> cr4 = new ArrayList<String>();
		int i,j=0;
		for(i=0; i<group.length; i++) {
			for(j=0; j<group[0].length;j++) {
				if(i == 0) {
					cr1.add(group[i][j]);
				}
				else if(i == 1) {
					cr2.add(group[i][j]);
				}
				else if(i == 2) {
					cr3.add(group[i][j]);
				}
				else{
					cr4.add(group[i][j]);
				}
			}
		}
		team.add(cr1);
		team.add(cr2);
		team.add(cr3);
		team.add(cr4);
		*/
		int w = 0;
		team.add("0");
		while(w < group[0].length) {
			team.get(w).add(group[0][w]);
			w++;
		}
		System.out.println(team);

	}

}
